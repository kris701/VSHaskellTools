<UserControl x:Class="HaskellTools.Windows.UserControls.DebuggerLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HaskellTools.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Label x:Name="LineNumberLabel" Content="0" Width="30" Foreground="White"/>
        <CheckBox x:Name="BreakPoint" Click="BreakPoint_Click"/>
        <Label x:Name="LineLabel" Foreground="White"/>
    </StackPanel>
</UserControl>
