<UserControl x:Class="HaskellTools.Windows.UserControls.DebuggerLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HaskellTools.Windows.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">
    <StackPanel Orientation="Horizontal">
        <Label x:Name="LineNumberLabel" Content="0" Width="30" Foreground="White" VerticalContentAlignment="Center"/>
        <Button x:Name="BreakPointButton" Width="30" Background="Red" Opacity="0" Click="ToggleBreakpoint_Click" VerticalContentAlignment="Center"/>
        <Label x:Name="LineLabel" Content="Line" Foreground="White" Background="Transparent" VerticalContentAlignment="Center"/>
    </StackPanel>
</UserControl>
